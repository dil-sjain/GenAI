# Environment Configuration

# Application URLs
CYPRESS_baseUrl=http://localhost:3000
CYPRESS_apiUrl=http://localhost:3000/api

# Test User Credentials
CYPRESS_vendorUsername=vendor_user
CYPRESS_vendorPassword=vendor_password
CYPRESS_adminUsername=admin_user
CYPRESS_adminPassword=admin_password
CYPRESS_readOnlyUsername=readonly_user
CYPRESS_readOnlyPassword=readonly_password

# Feature Flags
CYPRESS_assoc3p=false
CYPRESS_caseTypeSelection=false

# Test Configuration
CYPRESS_defaultCommandTimeout=10000
CYPRESS_requestTimeout=10000
CYPRESS_responseTimeout=30000
CYPRESS_pageLoadTimeout=30000

# Video and Screenshot Settings
CYPRESS_video=true
CYPRESS_screenshot=true
CYPRESS_screenshotOnRunFailure=true

# Browser Settings
CYPRESS_viewportWidth=1280
CYPRESS_viewportHeight=720

# Database (if using database plugin)
# CYPRESS_dbHost=localhost
# CYPRESS_dbPort=5432
# CYPRESS_dbName=tpm_test
# CYPRESS_dbUser=test_user
# CYPRESS_dbPassword=test_password
